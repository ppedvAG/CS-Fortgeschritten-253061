<Window x:Class="TPL_Multitasking.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPL_Multitasking.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450">
    <StackPanel Margin="10">
        <Button Click="Start" Content="Start (UI blockiert)" />
        <Button Click="StartTaskRun" Content="Start Task Run" />
        <Button Click="StartAsyncAwait" Content="Start Async Await" />
        <Button Click="Cancel" Content="Task abbrechen" />
        <Button Click="SendRequest" Content="Send Request" />
        <Button Click="StartLegacyCode" Content="Legacy Code ausführen" />
        
        <ProgressBar Name="progressBar" Value="0" Height="20" />
        <ScrollViewer Height="600">
            <TextBlock Name="Output" FontSize="10" />
        </ScrollViewer>
    </StackPanel>
</Window>
